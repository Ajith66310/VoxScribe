{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VoxScribe",
  "mainBinaryName": "voxscribe",
  "version": "0.1.0",
  "identifier": "com.ajith.VoxScribe",

  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },

  "app": {
    "windows": [
      {
        "label": "main",
        "title": "VoxScribe",
        "width": 900,
        "height": 700,
        "visible": true
      }
    ],

    "security": {
      "capabilities": ["default"],
      "csp": "default-src 'self'; img-src 'self' https://www.svgrepo.com https://*.googleusercontent.com https://www.google.com data:; connect-src 'self' https://*.supabase.co wss://*.supabase.co; style-src 'self' 'unsafe-inline'"
    }
  },

  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["voxscribe"]
      }
    },
    "opener": {}
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
